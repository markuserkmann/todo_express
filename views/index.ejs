<!DOCTYPE html>
<html lang="en">
    <head>
        <title>Todo List</title>
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.1/css/all.min.css">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">
    </head>
    <style>
.btn-delete {
  position: absolute;
  right: 0;
  font-size: 18px;
  cursor: pointer;
  background-color: #55555500;
}
    </style>
    
    <body>
        <div class="container">
            <div class="row">
                <div class="col s12 m6 offset-m3">
                    <div class="card blue-grey darken-1">
                        <div class="card-content white-text">
                            <span class="card-title">Todo List</span>
                            <div class="row">
                                <form method="POST" action="/getTask" id="task">
                                    <div class="input-field col s12">
                                        <input placeholder="Task" id="task" name="task" type="text">
                                        <label for="task">Insert Task</label>
                                    </div>
                                    <input class="btn" type="submit" value="Add task">
                                </form>
                            </div>
                        </div>
                        <div class="card-action">
                            <ul class="collection">
                                <% tasks.forEach((task) => { %>
                                    <li class="collection-item">
                                        <%= task.task %> (ID: <%= task.id %>)
                                        <form action="/delete-task/<%= task.id %>" method="POST" style="display: inline;">
                                            <button type="submit" class="btn-delete" aria-label="Delete task">
                                                <i class="fa-solid fa-trash"></i>
                                            </button>
                                        </form>
                                    </li>
                                <% }) %>                                                          
                                
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
    </body>
</html>
